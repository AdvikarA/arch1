{
	"name": "arch-ssh-extension",
	"displayName": "Arch SSH Extension",
	"description": "Custom SSH extension for connecting to ArchServer remote development environment.",
	"version": "0.0.1",
	"publisher": "arch",
	"repository": {
		"type": "git",
		"url": "https://github.com/arch/arch-ssh-extension.git"
	},
	"bugs": {
		"url": "https://github.com/arch/arch-ssh-extension/issues"
	},
	"icon": "resources/icon.png",
	"engines": {
		"vscode": "^1.70.2"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"enabledApiProposals": [
		"resolvers",
		"contribViewsRemote"
	],
	"keywords": [
		"remote development",
		"remote",
		"ssh",
		"arch",
		"archserver"
	],
	"api": "none",
	"activationEvents": [
		"*",
		"onCommand:archssh.openEmptyWindow",
		"onCommand:archssh.openEmptyWindowInCurrentWindow",
		"onCommand:archssh.openConfigFile",
		"onCommand:archssh.showLog",
		"onCommand:archssh.showJsonRpcViewer",
		"onCommand:archssh.exportJsonRpcLog",
		"onCommand:archssh.clearJsonRpcLog",
		"onResolveRemoteAuthority:arch-ssh-remote",
		"onView:archSshHosts"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Arch SSH",
			"properties": {
				"arch.ssh.configFile": {
					"type": "string",
					"description": "The absolute file path to a custom SSH config file.",
					"default": "",
					"scope": "application"
				},
				"arch.ssh.connectTimeout": {
					"type": "number",
					"description": "Specifies the timeout in seconds used for the SSH command that connects to the remote.",
					"default": 60,
					"scope": "application",
					"minimum": 1
				},
				"arch.ssh.defaultExtensions": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "List of extensions that should be installed automatically on all SSH hosts.",
					"scope": "application"
				},
				"arch.ssh.enableDynamicForwarding": {
					"type": "boolean",
					"description": "Whether to use SSH dynamic forwarding to allow setting up new port tunnels over an existing SSH connection.",
					"scope": "application",
					"default": true
				},
				"arch.ssh.enableAgentForwarding": {
					"type": "boolean",
					"markdownDescription": "Enable fixing the remote environment so that the SSH config option `ForwardAgent` will take effect as expected from VS Code's remote extension host.",
					"scope": "application",
					"default": true
				},
				"arch.ssh.serverPort": {
					"type": "number",
					"description": "The port on which ArchServer will run on the remote machine.",
					"default": 8080,
					"scope": "application"
				},
				"arch.ssh.remotePlatform": {
					"type": "object",
					"description": "A map of the remote hostname to the platform for that remote. Valid values: linux, macos, windows.",
					"scope": "application",
					"default": {},
					"additionalProperties": {
						"type": "string",
						"enum": [
							"linux",
							"macos",
							"windows"
						]
					}
				},
				"arch.ssh.remoteServerListenOnSocket": {
					"type": "boolean",
					"description": "When true, the remote ArchServer will listen on a socket path instead of opening a port. Only valid for Linux and macOS remotes. Requires `AllowStreamLocalForwarding` to be enabled for the SSH server.",
					"default": false
				}
			}
		},
		"commands": [
			{
				"command": "archssh.openEmptyWindow",
				"title": "Arch SSH: Connect to Host...",
				"category": "Arch SSH"
			},
			{
				"command": "archssh.openEmptyWindowInCurrentWindow",
				"title": "Arch SSH: Connect to Host in Current Window",
				"category": "Arch SSH"
			},
			{
				"command": "archssh.openConfigFile",
				"title": "Arch SSH: Open SSH Configuration File...",
				"category": "Arch SSH"
			},
			{
				"command": "archssh.showLog",
				"title": "Arch SSH: Show Log",
				"category": "Arch SSH"
			},
			{
				"command": "archssh.showJsonRpcViewer",
				"title": "Arch SSH: Show JSON-RPC Viewer",
				"category": "Arch SSH"
			},
			{
				"command": "archssh.exportJsonRpcLog",
				"title": "Arch SSH: Export JSON-RPC Log",
				"category": "Arch SSH"
			},
			{
				"command": "archssh.clearJsonRpcLog",
				"title": "Arch SSH: Clear JSON-RPC Log",
				"category": "Arch SSH"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "archSshHosts",
					"name": "Arch SSH Hosts"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "archssh.openEmptyWindow",
					"when": "view == archSshHosts",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts",
		"lint-fix": "eslint src --ext ts --fix",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@babel/core": "^7.28.0",
		"@babel/preset-env": "^7.28.0",
		"@types/node": "^16.11.7",
		"@types/ssh2": "^1.11.19",
		"@types/ssh2-streams": "^0.1.9",
		"@types/vscode": "^1.70.2",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"babel-loader": "^10.0.0",
		"eslint": "^8.26.0",
		"typescript": "^4.8.4",
		"webpack": "^5.100.2",
		"webpack-cli": "^6.0.1"
	},
	"dependencies": {
		"@jeanp413/ssh-config": "^4.3.1",
		"brace-expansion": "^4.0.1",
		"glob": "^11.0.3",
		"lru-cache": "^11.1.0",
		"path-scurry": "^2.0.0",

		"socks": "^2.7.1",
		"ssh2": "^1.15.0",
		"yallist": "^5.0.0"
	}
}
